@model IEnumerable<ApplicationCore.Models.MovieCardResponseModel>

@{
    ViewData["Title"] = "Purchases";
}

<div class="container-fluid">
    <div class="row">

        @foreach (var movie in Model)
        {
            <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
            <partial model="movie" name="_MovieCard" />
            <button type="button" class="btn btn-dark w-100">Purchase Details</button>
            @*the margin that makes this look wierd comes from the partial _MovieCard so I was not sure if I should edit that or not*@
            </div>
        }   

    </div>

</div>